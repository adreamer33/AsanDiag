<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.main.FragmentSpeedView">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_speed_view_img_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12101911" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_speed_view_right_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/imgbtn_speed_view_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:background="@android:color/transparent"
        android:tint="@color/fillColorIconMain"
        app:layout_constraintBottom_toTopOf="@+id/guideline_speed_view_img_top"
        app:layout_constraintEnd_toStartOf="@+id/guideline_speed_view_right_margin"
        app:layout_constraintStart_toStartOf="@+id/guideline_speed_view_right_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_arrow_back" />

    <com.github.anastr.speedviewlib.DeluxeSpeedView
        android:id="@+id/speed_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>