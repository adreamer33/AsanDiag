<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.asandiag.obd.view.intro.FragmentIntro2">

    <ImageView
        android:id="@+id/img_intro2_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@android:drawable/sym_def_app_icon"
        app:layout_constraintBottom_toTopOf="@+id/guideline_intro2_info_bottom"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_intro2_info_top" />

    <TextView
        android:id="@+id/tv_intro2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ویژگی دوم"
        app:layout_constraintBottom_toTopOf="@+id/tv_into1_desc"
        app:layout_constraintEnd_toEndOf="@+id/img_intro2_info"
        app:layout_constraintStart_toStartOf="@+id/img_intro2_info"
        app:layout_constraintTop_toBottomOf="@+id/guideline_intro2_title_top"
        style="@style/style_intro_tv_title" />

    <TextView
        android:id="@+id/tv_into1_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="34dp"
        android:text="توضیحات مربوط به استفده از اسان دیاگ متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ طراحان گرافیک است "
        app:layout_constraintBottom_toTopOf="@+id/btn_intro2_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_intro2_title"
        style="@style/style_intro_tv_description" />

    <Button
        android:id="@+id/btn_intro2_next"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="43dp"
        android:text="بعدی"
        app:layout_constraintBottom_toTopOf="@+id/btn_intro2_login"
        app:layout_constraintDimensionRatio="w,0.21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_into1_desc"
        app:layout_constraintWidth_max="290dp"
        app:layout_constraintWidth_percent="0.69"
        style="@style/style_intro_btn_next" />

    <TextView
        android:id="@+id/btn_intro2_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="ورود به برنامه"
        app:layout_constraintBottom_toTopOf="@id/guideline_intro2_login_bottom"
        app:layout_constraintEnd_toEndOf="@+id/btn_intro2_next"
        app:layout_constraintStart_toStartOf="@+id/btn_intro2_next"
        app:layout_constraintTop_toBottomOf="@+id/btn_intro2_next"
        style="@style/style_intro_tv_login" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_intro2_info_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08071136" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_intro2_info_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.31" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_intro2_title_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_intro2_login_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".84" />


</androidx.constraintlayout.widget.ConstraintLayout>