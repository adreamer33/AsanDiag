<?xml version="1.0" encoding="utf-8"?>
<ir.asandiag.neumorphism.shapeMode.neu.shapes.RoundRectView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RoundRectView.Home.ItemCompany"
    android:layout_width="190dp"
    android:layout_height="190dp"
    android:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintWidth_percent="0.5">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_company_item_logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerInside"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toTopOf="@+id/guideline_company_item_tv_top"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_max="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="90dp"
            app:layout_constraintWidth_percent="0.5"
            app:srcCompat="@drawable/ic_irankhodro_logo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_company_item_title"
            style="@style/TextView.Home.ItemCompany.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ایران خودرو"
            app:layout_constraintBottom_toTopOf="@id/tv_company_item_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline_company_item_tv_top" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_company_item_description"
            style="@style/TextView.Home.ItemCompany.Desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:text="سمند، پژو، 206 و ..."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_company_item_title" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_company_item_tv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.52" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ir.asandiag.neumorphism.shapeMode.neu.shapes.RoundRectView>
