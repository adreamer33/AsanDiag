<?xml version="1.0" encoding="utf-8"?>
<ir.asandiag.neumorphism.widgetMode.NeumorphCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardView.Home.SortItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_item_showed_title"
            style="@style/TextView.ShowedItems.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="15dp"
            android:text="دریچه گاز"
            app:layout_constraintBottom_toTopOf="@id/tv_item_showed_desc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginBottom="13dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_item_showed_desc"
            style="@style/TextView.ShowedItems.Desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="13dp"
            android:text="توضیحات مربوط به این آیتم در صورت وجود"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tv_item_showed_title"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_showed_title" />

        <ir.asandiag.switchbutton.SwitchButton
            android:id="@+id/switch_item_showed_state"
            style="@style/SwitchButton.ShowedItems"
            android:layout_width="44dp"
            android:layout_height="25dp"
            android:layout_marginStart="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_item_showed_title"
            app:layout_constraintEnd_toStartOf="@+id/tv_item_showed_title"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_item_showed_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ir.asandiag.neumorphism.widgetMode.NeumorphCardView>
