<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_item_showed_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/iransans_medium"
        android:gravity="end"
        android:lineSpacingExtra="9sp"
        android:text="دریچه گاز"
        android:textColor="#202020"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/tv_item_showed_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginBottom="13dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_item_showed_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="@font/iransans_medium"
        android:gravity="end"
        android:lineSpacingExtra="8sp"
        android:text="توضیحات مربوط به این آیتم در صورت وجود"
        android:textColor="#202020"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tv_item_showed_title"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_showed_title" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_item_showed_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_showed_title"
        app:layout_constraintEnd_toStartOf="@+id/tv_item_showed_title"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_item_showed_title" />

</androidx.constraintlayout.widget.ConstraintLayout>